<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add_story.UploadFragment">

    <FrameLayout
        android:id="@+id/standard_bottom_sheet"
        style="@style/Widget.Material3.BottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/list_item_spacing"
        android:paddingBottom="@dimen/list_item_spacing_half">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dialog_open_camera"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/camera"
                android:textAlignment="textStart"
                android:textSize="16sp"
                app:icon="@drawable/ic_camera"
                app:iconGravity="start"
                app:iconPadding="16dp"
                app:iconSize="24dp"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.None" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dialog_open_gallery"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/gallery"
                android:textAlignment="textStart"
                android:textSize="16sp"
                app:icon="@drawable/ic_gallery"
                app:iconGravity="start"
                app:iconPadding="16dp"
                app:iconSize="24dp"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.None" />
        </LinearLayout>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
